{
    "compilerOptions": {
        "target": "ES2015",
        "lib": [
            "esnext"
        ],
        "strict": true,
        "strictPropertyInitialization": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "moduleResolution": "node",
        "module": "CommonJS"
    },
    "include": [
        "examples",
        "scripts"
    ],
    "exclude": [
        "node_modules"
    ]
}